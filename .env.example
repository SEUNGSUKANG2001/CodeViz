# =================================
# CodeViz Environment Configuration
# =================================
# Copy this file to .env and fill in your values

# Database (used by both web and worker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/codeviz

# Redis (used by both web and worker)
REDIS_URL=redis://localhost:6379

# Kakao OAuth (web only)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=http://localhost:3000/api/v1/auth/kakao/callback

# AWS S3 (used by both web and worker)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=your-bucket-name

# App Configuration (web only)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
SESSION_SECRET=your_session_secret_here
